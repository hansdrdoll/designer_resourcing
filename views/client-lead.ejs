<!DOCTYPE html>
<html>
<head>
  <title>Client Leads</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/static/stylesheets/reset.css">
    <link rel="stylesheet" href="/static/stylesheets/style.css">
    <link rel="stylesheet" href="/uikit/css/uikit.min.css">
</head>
<body>
  <nav class="uk-navbar-container" uk-navbar>
    <div class="uk-navbar-left">
          <ul class="uk-navbar-nav">
            <li class="uk-navbar-item"><a href="/report">Report</a></li>
            <li class="uk-navbar-item"><a href="/assign-resources">Assign Resources</a></li>
            <li class="uk-navbar-item"><a href="/projects">Add/Edit Projects</a></li>
            <li class="uk-navbar-item uk-active"><a href="/resources">Edit Staff</a></li>
            <div uk-dropdown>
              <ul class="uk-nav uk-dropdown-nav">
                <li class="uk-navbar-item"><a href="/resources">Resources</a></li>
                <li class="uk-navbar-item"><a href="/client-leads">Client Leads</a></li>
            </ul>
          </div>
        </ul>
    </div>
  </nav>

  <main class="uk-margin-left uk-margin-right uk-margin-top uk-grid-medium uk-child-width-1-2@s uk-child-width-1-3@m uk-flex-around" uk-grid>
    <div>
     <h2 class="uk-heading-line uk-text-left">
      <span>Edit Client Lead</span>
    </h2>
    <form action="/client-leads/<%= clientLead.id %>?_method=put" method="post">
      <fieldset class="uk-form-stacked">
      <label for="name" class="uk-form-label">Name</label>
      <input type="text" name="name" class="uk-input" value="<%= clientLead.name %>">
      <label for="slack_username" class="uk-form-label uk-margin-top">Slack</label>
      <input type="text" name="slack_username" class="uk-input" value="<%= clientLead.slack_username %>">
      </fieldset>
      <input type="submit" value="submit" class="uk-button uk-button-primary uk-button-small">
      <a href="/client-leads" class="uk-margin-left uk-button uk-button-text uk-button-small">Cancel</a>
    </form>
    <form action="/client-leads/<%= clientLead.id %>?_method=delete" method="post" class="uk-margin">
      <input type="submit" value="Delete" class="uk-button uk-button-danger uk-button-small">
    </form>
    </div>
  <div class="uk-text-right">
    <h2 class="uk-heading-line uk-text-right">
      <span>Client Leads</span>
    </h2>
    <% clientLeads.forEach(lead => { %>
    <a href="/client-leads/<%= lead.id %>" class="uk-width-1-1 uk-button uk-button-default uk-button-small">
     <%= lead.name %></a>
    <% }) %>
</main>
<script src="/uikit/js/uikit-icons.min.js"></script>
<script src="/uikit/js/uikit.min.js"></script>
</body>
</html>
